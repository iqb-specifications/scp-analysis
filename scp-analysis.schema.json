{
  "$id": "scp-analysis@0.1",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Survey output analysis",
  "description": "Specification for processing survey output.",
  "type": "object",
  "properties": {
    "id": {
      "description": "Identifier to handle different analysis definitions.",
      "type": "string"
    },
    "name": {
      "$ref": "#/$defs/languageTaggedText"
    },
    "description": {
      "$ref": "#/$defs/languageTaggedText"
    },
    "items": {
      "description": "Definition of all items from all instruments.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/item"
      },
      "minItems": 1
    }
  },
  "required": [
    "id",
    "items"
  ],
  "additionalProperties": false,
  "$defs": {
    "languageTaggedText": {
      "description": "Language tagged text",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lang": {
            "description": "ISO-language code",
            "type": "string",
            "minLength": 1,
            "pattern": "^[a-z]{2}$"
          },
          "value": {
            "type": "string"
          }
        },
        "required": [
          "lang",
          "value"
        ],
        "additionalProperties": false
      },
      "minItems": 1
    },
    "metadata": {
      "$ref": "https://w3id.org/iqb/spec/metadata-values/3.0"
    },
    "item": {
      "type": "object",
      "properties": {
        "id": {
          "description": "Identifier used in all other definitions of this document",
          "type": "string"
        },
        "name": {
          "$ref": "#/$defs/languageTaggedText"
        },
        "sources": {
          "description": "This item will get its value from various sources throughout the survey",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "surveyPartId": {
                "description": "Refers to a surveyPart of the current survey content package",
                "type": "string"
              },
              "instrumentId": {
                "description": "Refers to an instrument of the surveyPart",
                "type": "string"
              },
              "fileId": {
                "description": "Refers to a file object containing the unit",
                "type": "string"
              },
              "unitId": {
                "description": "Refers to the unit data (UI definition, coding scheme, metadata etc.)",
                "type": "string"
              },
              "unitAlias": {
                "description": "Refers to the unit id used in response data",
                "type": "string"
              },
              "sourceVariable": {
                "description": "Refers to the variable providing its score as item value",
                "type": "string"
              }
            },
            "required": [
              "file"
            ],
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "required": [
        "id",
        "name",
        "sources"
      ],
      "additionalProperties": false
    }
  }
}
